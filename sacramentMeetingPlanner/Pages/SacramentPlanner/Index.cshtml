@page
@model sacramentMeetingPlanner.Pages.SacramentPlanner.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Meeting[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meeting[0].ConductingLeader)
            </th>
            <th>
                Songs
            </th>
            <th>
                Speakers
            </th>
            <th>
                Prayers
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Meeting) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ConductingLeader)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OpeningSong) <br />
                    @Html.DisplayFor(modelItem => item.SacramentHymn) <br />
                    @Html.DisplayFor(modelItem => item.IntermediateNumber) <br />
                    @Html.DisplayFor(modelItem => item.ClosingSong)
                </td>
                <td>
                    @foreach (var speaker in item.Speakers)
                    {
                        @Html.DisplayFor(modelItem => speaker.FirstName)@:&nbsp;@Html.DisplayFor(modelItem => speaker.LastName)<br />
                    }
                </td>
            <td>
                    Opening: @Html.DisplayFor(modelItem => item.OpeningPrayer) <br />
                Closing: @Html.DisplayFor(modelItem => item.ClosingPrayer)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
